{
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"hosting": {
		"public": "build",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"cleanUrls": true,
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		],
		"trailingSlash": false
	},
	"emulators": {
		"firestore": {
			"port": 8080
		},
		"hosting": {
			"port": 5500
		},
		"ui": {
			"enabled": true
		}
	}
}
